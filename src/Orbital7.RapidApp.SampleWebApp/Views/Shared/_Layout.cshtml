<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Orbital7.RapidApp Sample Web App" />
    <title>Sample Web App</title>
    @await Html.RAInfrastructureStylesheetsAsync()
    @await Html.RAInfrastructureScriptsAsync()
    @RenderSection("Scripts", required: false)

    <style>
        .sidebarButtonTop {
            margin-top: 10px;
        }

        .sidebarButtonBottom {
            margin-bottom: 10px;
        }

        .sidebarDivider {
            border-top: 2px solid gray;
            margin-left: 10px;
            margin-right: 10px;
        }

    </style>
</head>
<body>

    <div class="ra-layout">
        <div class="ra-layout-sidebar">

            <div class="layout-sectionbar"
                 style="position: absolute; width: 80px; background-color: #1F2631; height: 100%;">
                <table style="width: 100%; height: 100%;">
                    <tr>
                        <td style="text-align: center; vertical-align: top;">
                            <div class="sidebarButtonTop">
                                <i class="far fa-arrow-alt-circle-left fa-2x"></i>
                            </div>
                            <div class="sidebarButtonTop sidebarDivider"></div>
                            <div class="sidebarButtonTop">
                                <i class="fas fa-search fa-2x"></i>
                            </div>
                            <div class="sidebarButtonTop sidebarDivider"></div>
                            <div class="sidebarButtonTop">
                                @Html.RAButton("<i class='fas fa-home fa-2x ra-color-white'></i>",
                                    "navigateTo('/Home/Index');", buttonClass: "btn-link")
                            </div>
                            <div class="sidebarButtonTop">
                                @Html.RAButton("<i class='fas fa-scroll fa-2x ra-color-white'></i>",
                                    "navigateTo('/Pages/Index');", buttonClass: "btn-link")
                            </div>
                            <div class="sidebarButtonTop">
                                @Html.RAButton("<i class='fas fa-table fa-2x ra-color-white'></i>",
                                    "navigateTo('/DataGrids/Index');", buttonClass: "btn-link")
                            </div>
                            <div class="sidebarButtonTop">
                                @Html.RAButton("<i class='fas fa-window-restore fa-2x ra-color-white'></i>",
                                    "navigateTo('/ModalDialogs/Index');", buttonClass: "btn-link")
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: center; vertical-align: bottom;">
                            <div class="sidebarButtonBottom">
                                @using (Html.RABeginDropdownButton("<i class='fas fa-cogs fa-2x' style='color: white;'></i>",
                                  "adminButton", buttonClass: "btn-link", dropdownClass: "btn-group dropright"))
                                {
                                    @Html.RADropdownItem("SETTINGS 1", "alert('Settings 1');")
                                    @Html.RADropdownItem("SETTINGS 2", "alert('Settings 2');")
                                }
                            </div>
                            <div class="sidebarButtonBottom">
                                <i class="far fa-user fa-2x"></i>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>

            @if (IsSectionDefined("taskbar"))
            {
                <div class="layout-taskbar"
                     style="position: absolute; left: 80px; width: 210px; background-color: #F2F4F8; height: 100%;">
                    @RenderSection("taskbar")
                </div>
            }
            else
            {
                <style>

                    .ra-layout-sidebar {
                        width: 80px;
                    }

                    .ra-layout-body {
                        left: 80px;
                    }

                    @@media (max-width: calc(767px)) {

                        .ra-layout-body {
                            left: 0px;
                        }
                    }
                </style>
            }

        </div>

        <div class="ra-layout-body" style="padding: 15px;" onmousedown="raHideSidebar();">

            <table style="width: 100%; margin-bottom: 20px;">
                <tr>
                    <td class="ra-layout-sidebar-toggle-button" style="height: 38px; width: 56px; vertical-align: middle; text-align: left;">
                        <button type="button"
                                class="btn btn-outline-secondary"
                                onclick="raToggleSidebar()">
                            <i class="fas fa-bars" style="font-size: 1.1em;"></i>
                        </button>
                    </td>
                    <td style="text-align: left; height: 38px;">
                        Left
                    </td>
                    <td style="text-align: right; height: 38px;">
                        Right
                    </td>
                </tr>
            </table>

            @RenderBody()
        </div>

    </div>

    <div id="ra-dialog" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ra-dialog-title">
        <div id="ra-dialog-modal" class="modal-dialog" role="document">
            <div id="ra-dialog-modal-content" class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="ra-dialog-title">TITLE</h4>
                    <button id="ra-dialog-cancelbutton-corner"
                            type="button"
                            class="close"
                            onclick="raCloseModalDialog(event);"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <input type="hidden" id="ra-dialog-returnaction" />
                </div>
                <div class="modal-body" id="ra-dialog-body">
                    BODY
                </div>
                <div class="modal-footer">
                    <span id="ra-dialog-processing" style="display: none;">
                        <img src="/orbital7-rapidapp/dist/images/spinners/ra-spinner-sm.gif" /> Processing...
                    </span>
                    @Html.RAButton("CANCEL",
                        "raCloseModalDialog(event);",
                        buttonClass: "btn-secondary btn-lg",
                        buttonId: "ra-dialog-cancelbutton")
                    @Html.RAButton("ACTION",
                        "submitModalDialog(event);",
                        buttonClass: "btn-primary btn-lg",
                        buttonId: "ra-dialog-actionbutton")
                </div>
            </div>
        </div>
    </div>

</body>
</html>
