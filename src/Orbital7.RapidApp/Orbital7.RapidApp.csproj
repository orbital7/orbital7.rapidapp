<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.1.1</Version>
    <AssemblyVersion>2.1.1.0</AssemblyVersion>
    <Authors>Josh van Eikeren</Authors>
    <Company>Orbital7</Company>
    <Description>ASP.NET Core 2.1 Framework for rapidly constructing web applications</Description>
    <Copyright>Copyright © 2017-2018 Orbital7</Copyright>
    <PackageProjectUrl>https://github.com/orbital7/orbital7.rapidapp</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/orbital7/orbital7.rapidapp/blob/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl>https://avatars3.githubusercontent.com/u/15078943</PackageIconUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\bin\Debug\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\bin\Release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.1.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Physical" Version="2.1.0" />
    <PackageReference Include="Orbital7.Extensions" Version="2.1.0" />
    <PackageReference Include="Orbital7.Extensions.AspNetCore" Version="2.1.0" />
    <PackageReference Include="Orbital7.Extensions.Attributes" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Views\RATouch\EditorTemplates\RATouchPadModel.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\RATouch\RADialogTouchPad.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\RATouch\_RATouchDialog.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="wwwroot\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
